<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_glove_connect_to"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tiregram.glove.bluetoothglove.GloveConnectTo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp">

        <TextView
            android:text="Addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ConnectTo_addr"
            android:layout_below="@+id/ConnectTo_name"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConnectTo_addr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/button" />

        <Button
            android:text="log - graph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConnectTo_addr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/button3" />

        <Button
            android:text="3D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConnectTo_addr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/button2" />

        <Button
            android:text="mousse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ConnectTo_addr"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:id="@+id/mouse" />
    </LinearLayout>

    <TextView
        android:text="No Connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConnectTo_state"
        android:layout_alignBaseline="@+id/ConnectTo_name"
        android:layout_alignBottom="@+id/ConnectTo_name"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConnectTo_name"
        android:textSize="36sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
